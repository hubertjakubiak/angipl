- title "#{@word.pl} po angielsku to #{@word.en}"
.row
  .col-md-6
    %h1 Dane słówka 
    %p
      %strong Angielski: 
      = @word.en
    %p
      %strong Polski: 
      = @word.pl
    %p
      %strong Kategoria:
      = @word.categories.map{|p| p.name}.join(", ")
    %p
      %strong Dobre tłumaczenie:
      = @word.get_upvotes.size 
    %p
      %strong Złe tłumaczenie:
      = @word.get_downvotes.size 
    %p
      %strong Dodane przez:
      = @word.user.name
  - if can? :edit, @word
    .col-md-6
      %h2 Zarządzaj
      = link_to 'Edytuj słówko', edit_word_path(@word)
.row
  .col-md-6
    %h3 
      Komentarze (
      = @word.comments.count
      )
    - if @word.comments.any? && !@word.comments[0].new_record?
      - @word.comments.each do |comment|
        - unless comment.new_record?
          = react_component "Comment", {comment: comment.content}
    - if can? :create, Comment
      = render 'comments/form'
= react_component "CommentsContainer", {commentsPath: word_comments_path(@word)}

  
