%h1 Listing Words
%table.table
  %thead
    %tr
      %th En
      %th Pl
      %th User
      %th{:colspan => "3"}
  %tbody
    - @words.each do |word|
      %tr
        %td= word.en
        %td= word.pl
        %td= word.user_id
        %td= link_to 'Show', word, {:class => 'btn btn-default'}
        %td= link_to 'Edit', edit_word_path(word), {:class => 'btn btn-default'}
        %td= link_to 'Destroy', word, :class => 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' }
